{% macro input(name, label, id, value = "", type = "text", required = false) %}
    <div class="form-group">
        {% if type != 'hidden' %}
        <label for="{{ id }}">{{ label }}{% if required %} <span class="required">*</span>{% endif %}</label>
        {% endif %}
        <input type="{{ type }}"  id="{{ id }}" class="form-control" name="{{ name }}" value="{{ value|e }}"{% if required %} required="required"{% endif %} >
    </div>
{% endmacro %}
